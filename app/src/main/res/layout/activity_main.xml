<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:rowCount="24"
    android:columnCount="1"
    android:id="@+id/gridlayout">

    <TextView android:text="@string/hello_world" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/darkblue"
        android:textSize="24sp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="top"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|fill"
        android:id="@+id/linearLayout"
        android:layout_row="2"
        android:layout_column="0"
        android:weightSum="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/intro_message"
            android:id="@+id/intro_message"
            android:textSize="18sp"
            android:theme="@style/AppTheme"
            android:gravity="center_vertical|center|center_horizontal"
            android:layout_margin="5dp"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal">

                <Button
                    android:onClick="TopButtonClickHandler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Go"
                    android:id="@+id/topBtn"
                    android:textColor="@color/darkpurple"
                    android:textSize="20dp" />

                <Button
                    android:onClick="FlashcardButtonClickHandler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:id="@+id/flashStartBtn"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:layout_margin="3dp" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</GridLayout>

