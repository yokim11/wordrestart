    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayoutQuestionItems">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"  android:stretchColumns="*" android:background="#9E9E9E"
            android:padding="10dp"
            android:layout_margin="5dp">

            <!-- 시간 , 단어 갯수 영역 -->
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textSize="24sp"
                    android:text="Time : "
                    android:background="#9E9E9E"
                    android:textColor="#ffffff"
                    android:gravity="fill_vertical|center_horizontal"
                    android:textStyle="bold"
                    android:id="@+id/tableRowStatCol1"
                    android:layout_gravity="right" />


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textSize="24sp"
                    android:text="5"
                    android:background="#9E9E9E"
                    android:textColor="#ffffff"
                    android:gravity="fill_vertical|center_horizontal"
                    android:textStyle="bold"
                    android:id="@+id/tableRowStatCol2"
                    android:layout_gravity="left" />


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textSize="24sp"
                    android:text="Words : "
                    android:background="#9E9E9E"
                    android:textColor="#ffffff"
                    android:gravity="fill_vertical|center_horizontal"
                    android:textStyle="bold"
                    android:id="@+id/tableRowStatCol3"
                    android:layout_gravity="right" />


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textSize="24sp"
                    android:text="1"
                    android:background="#9E9E9E"
                    android:textColor="#ffffff"
                    android:gravity="fill_vertical|center_horizontal"
                    android:textStyle="bold"
                    android:id="@+id/tableRowStatCol4" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textSize="24sp"
                    android:text="of"
                    android:background="#9E9E9E"
                    android:textColor="#ffffff"
                    android:gravity="fill_vertical|center_horizontal"
                    android:textStyle="bold"
                    android:id="@+id/tableRowStatCol5" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textSize="24sp"
                    android:text="40"
                    android:background="#9E9E9E"
                    android:textColor="#ffffff"
                    android:gravity="fill_vertical|center_horizontal"
                    android:textStyle="bold"
                    android:id="@+id/tableRowStatCol6" />
            </TableRow>

                <!--  단어 표시 영역 -->
                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textSize="40sp"
                        android:text="Word test"
                        android:layout_span="6"
                        android:background="#42A5F5"
                        android:textColor="#ffffff"
                        android:id="@+id/textViewWord"
                        android:gravity="center|center_horizontal"
                        android:padding="10dp" />
                </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:paddingTop="30dp"
                android:id="@+id/tableRowTestStartMessage">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="※ 답안 선택은 한번씩만 클릭 가능합니다.\n Start 버튼을 눌러 주세요."
                    android:id="@+id/textView2"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_span="6" />
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:paddingTop="30dp"
                android:id="@+id/tableRowTestStartButton">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:id="@+id/buttonTestStart"
                    android:gravity="fill_vertical|center_horizontal"
                    android:singleLine="false"
                    android:onClick="startTestClickHandler"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="10sp"
                android:text="Word"
                android:layout_span="6"
                android:textColor="#ffffff"
                android:id="@+id/textViewMessage"
                android:gravity="center|center_horizontal"
                android:padding="10dp"
                android:visibility="gone" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="확인"
                android:id="@+id/exitButton"
                android:layout_column="0"
                android:visibility="gone"
                android:textColor="#ffffff"
                android:onClick="exitButtonClickHandler"
                android:textSize="20sp" />

        </LinearLayout>

        <ListView
            android:id="@+id/listViewWordList"
            android:layout_width="fill_parent"
            android:layout_height="318dp" />

    </LinearLayout>

</LinearLayout>
